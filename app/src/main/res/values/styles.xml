<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="toolbarStyle">@style/custom_toolbar</item>


    </style>

    <style name="SpaceTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="custom_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00000000</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextAppearance.AppCompat.Tiny" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CollapsedSpaceAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="ExpandedSpaceAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <!-- NavigationView theme -->

    <style name="SpaceNavTheme" parent="Theme.NASA_Bootcamp">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="shapeAppearanceSmallComponent">@style/NavigationShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/inter_extrabold</item>
        <item name="android:fontFamily">@font/inter_extrabold</item>
    </style>
    <style name="TextAppearance.AppCompat.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="NavigationShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- SpaceButton theme -->

    <style name="SpaceButton" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">?cardBackgroundColor</item>
        <item name="backgroundTint">?cardBackgroundColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <!-- DatePicker theme -->

    <style name="DatePicker" parent="Theme.NASA_Bootcamp">
        <item name="shapeAppearanceMediumComponent">@style/DatePicker.MediumComponent</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="DatePicker.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Slider theme -->

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">?cardBackgroundColor</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/grey_100</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

</resources>