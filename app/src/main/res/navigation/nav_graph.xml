<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/nasaFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.nasa.NasaFragment"
        android:label="NasaFragment" />
    <fragment
        android:id="@+id/asteroidRadarFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.asteroid_radar.AsteroidRadarFragment"
        android:label="AsteroidRadarFragment">
        <action
            android:id="@+id/action_asteroidRadarFragment_to_asteroidDetails"
            app:destination="@id/asteroidDetails"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/marsRoversFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.mars_rovers.MarsRoversFragment"
        android:label="MarsRoversFragment">
        <action
            android:id="@+id/action_marsRoversFragment_to_roverDetails"
            app:destination="@id/roverDetails" />
    </fragment>
    <fragment
        android:id="@+id/spaceXFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.SpaceXFragment"
        android:label="SpaceXFragment">
        <action
            android:id="@+id/action_spaceXFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/upcomingEventsFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.upcoming_events.UpcomingEventsFragment"
        android:label="UpcomingEventsFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.about.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/contactFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.contact.ContactFragment"
        android:label="ContactFragment" />

    <fragment
        android:id="@+id/createPostFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.user_create_post.CreatePostFragment"
        android:label="CreatePostFragment" />

    <fragment
        android:id="@+id/allUserPostFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.view_user_posts.ViewAllPostFragment"
        android:label="user_posts"/>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.ExploreFragment"
        android:label="ExploreFragment">
        <action
            android:id="@+id/action_exploreFragment_to_historyFragment"
            app:destination="@id/infoFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_exploreFragment_to_capsulesFragment"
            app:destination="@id/capsulesFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_exploreFragment_to_roadsterFragment"
            app:destination="@id/roadsterFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_exploreFragment_to_coresFragment"
            app:destination="@id/coresFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_exploreFragment_to_dragonsFragment"
            app:destination="@id/dragonsFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_exploreFragment_to_launchLandFragment"
            app:destination="@id/launchLandFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.auth.login.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/reg"
            app:destination="@id/regFragment2"

            app:enterAnim="@anim/slide_enter_anim"
            app:exitAnim="@anim/slide_exit_anim"
            app:popEnterAnim="@anim/slide_pop_enter_anim"
            app:popExitAnim="@anim/slide_pop_exit_anim" />
        <action
            android:id="@+id/success_login"
            app:destination="@id/nasaFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/regFragment2"
        android:name="ru.myitschool.nasa_bootcamp.ui.auth.reg.RegFragment"
        android:label="RegFragment">
        <action
            android:id="@+id/success_reg"
            app:destination="@id/nasaFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/login"
        app:destination="@id/authFragment" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.history.InfoFragment"
        android:label="HistoryFragment" >
        <action
            android:id="@+id/action_historyFragment_to_historyFragment2"
            app:destination="@id/historyFragment2" />
    </fragment>
    <fragment
        android:id="@+id/capsulesFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.capsules.CapsulesFragment"
        android:label="fragment_capsules"
        tools:layout="@layout/fragment_capsules" />
    <fragment
        android:id="@+id/roadsterFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.roadster.RoadsterFragment"
        android:label="RoadsterFragment" />
    <fragment
        android:id="@+id/coresFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.cores.CoresFragment"
        android:label="fragment_cores"
        tools:layout="@layout/fragment_cores" />
    <fragment
        android:id="@+id/dragonsFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.dragons.DragonsFragment"
        android:label="fragment_dragons"
        tools:layout="@layout/fragment_dragons" />
    <fragment
        android:id="@+id/launchLandFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.launchland.LaunchLandFragment"
        android:label="fragment_launch_land"
        tools:layout="@layout/fragment_launch_land" >
        <action
            android:id="@+id/action_launchLandFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_spaceXFragment"
            app:destination="@id/spaceXFragment" />
        <action
            android:id="@+id/action_homeFragment_to_asteroidRadarFragment"
            app:destination="@id/asteroidRadarFragment" />
        <action
            android:id="@+id/action_homeFragment_to_marsRoversFragment"
            app:destination="@id/marsRoversFragment" />
        <action
            android:id="@+id/action_homeFragment_to_nasaFragment"
            app:destination="@id/nasaFragment" />
    </fragment>
    <fragment
        android:id="@+id/asteroidDetails"
        android:name="ru.myitschool.nasa_bootcamp.ui.asteroid_radar.AsteroidDetailsFragment"
        android:label="fragment_asteroid_details"
        tools:layout="@layout/fragment_asteroid_details" />
    <fragment
        android:id="@+id/roverDetails"
        android:name="ru.myitschool.nasa_bootcamp.ui.mars_rovers.RoverDetails"
        android:label="fragment_rover_details"
        tools:layout="@layout/fragment_rover_details" />

      <fragment
        android:id="@+id/mapsFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.launchland.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <argument
            android:name="longitude"
            app:argType="float"
            android:defaultValue="0" />
        <argument
            app:argType="float"
            android:name="latitude"
            android:defaultValue="0" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="details" />
    </fragment>

    <fragment
        android:id="@+id/userPost"
        android:name="ru.myitschool.nasa_bootcamp.ui.view_user_posts.ViewPostFragment"
        android:label="fragment_user_post"
        tools:layout="@layout/fragment_view_post" />
    <fragment
        android:id="@+id/historyFragment2"
        android:name="ru.myitschool.nasa_bootcamp.ui.spacex.explore.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigationSkyFragment"
        android:name="ru.myitschool.nasa_bootcamp.ui.space_nav.NavigationSkyFragment"
        android:label="NavigationSkyFragment" />

</navigation>